<script>
	function ViewOutline2(id) {
		$.ajax({
			type: 'GET',
			url: '/Admin/GetCourseDescriptionById',
			data: { id: id },
			dataType: 'json',
			success: function (data) {
				if (!data.isError) {
					var outlin = data.split("\n");
					document.getElementById('view_Outline').innerHTML = "<ul><li>" + outlin.join("</li><li>") + "</li></ul>";
				}
			}
		});
	}
</script>


