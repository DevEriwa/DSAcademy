	<script>
		function errorAlert(message) {
			Swal.fire({
				icon: 'error',
				text: message,
				confirmButtonColor: "#0253cc",
				timer: 30000,
			})
		}

		function infoAlert(message) {
			Swal.fire({
				icon: 'info',
				text: message,
				confirmButtonColor: "#0253cc",
			})
		}

		function infoAlertWithStyles(message) {
			Swal.fire({
				title: 'Notification',
				icon: 'info',
				text: message,
			})
		}

		function successAlert(message) {
			Swal.fire({
				icon: 'success',
				text: message,
				confirmButtonColor: "#0253cc",
				timer: 30000,
			})
		}

		function newErrorAlert(message, url) {
			Swal.fire({
				icon: 'error',
				text: message,
				confirmButtonColor: "#0253cc",
			}).then((isConfirm) => {
				if (isConfirm) {
					location.reload(url);
				}
			})
		}


		function errorAlertWithRedirect(message, url) {
			Swal.fire({
				title: "Error",
				text: message,
				icon: "error",
				timer: 30000,
				confirmButtonColor: "#0253cc",
				overlay: "background - color: rgba(43, 165, 137, 0.45)",
			}).then(function () {

				location.href = url;
			})
		}

		function newSuccessAlert(message, url) {
			Swal({
				icon: 'success',
				text: message,
				confirmButtonColor: "#0253cc",
			}).then((isConfirm) => {
				if (isConfirm) {
					location.reload(url);
				}
			})
		}

		function successAlertWithRedirect(message, url) {
