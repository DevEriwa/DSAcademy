@{
    ViewData["Title"] = "Registration Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Page Wrapper -->
<div class="container mb-5">
    <!-- Account Logo -->
    <!-- Page Content -->
    <div class="mb-4 pb-4">

    </div>
    <div class="content container-fluid pt-5">

        <div class="card mt-5 p-3">
            <div class="account-logo" style="text-align: center; margin-bottom: 30px;">
                <img />
                <a href="index.html"><img src="~/edu/admin/assets/images/dsa png[3].png" style="max-width: 150px; height: auto;"></a>
            </div>

            <div class="row">
                <div class="col-md-10 m-auto">
                    <!-- Page Header -->
                    <div class="page-header">
                        <div class="row mb-2">
                            <div class="col-sm-12 mt-4">
                                <h3 class="page-title text-center">Company Registration</h3>
                            </div>
                        </div>
                    </div>
                    <!-- /Page Header -->
                    <div class="row mb-2">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label for="companyName">Name <span class="text-danger">*</span></label>
                                <input class="form-control" id="companyName" name="companyName" type="text" required>
                            </div>
                        </div>


                        <div class="col-sm-6">
                            <div class="form-group">
                                <label for="">Email <span class="text-danger">*</span></label>
                                <input class="form-control" id="companyEmail" type="email" required>
                            </div>
                        </div>
                    </div>

                    <div class="row mb-2">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label>Address <span class="text-danger">*</span></label>
                                <input class="form-control" id="companyAddress" type="text" required>
                            </div>
                        </div>

                        <div class="col-sm-6">
                            <div class="form-group">
                                <label>Logo <span class="text-danger">Optional</span></label>
                                <input class="form-control" id="companyLogo" type="file">
                            </div>
                        </div>
                    </div>

                    <div class="row mb-2">
                        <div class="col-md-6 mb-3">
                            <div class="form-group">
                                <label>Phone <span class="text-danger">*</span></label>
                                <input class="form-control" id="companyPhone" type="tel" required>
                            </div>
                        </div>


                        <div class="col-md-6 mb-3">
                            <div class="form-group">
                                <label>Mobile <span class="text-danger">Optional</span></label>
                                <input class="form-control" id="companyMobile" type="tel">
                            </div>
                        </div>
                    </div>
                   

                </div>
            </div>

            <div class="row">
                <div class="col-md-10 m-auto">
                    <!-- Page Header -->
                    <div class="page-header">
                        <div class="row mb-2">
                            <div class="col-sm-12 mt-4">
                                <h3 class="page-title text-center">Admin Registration</h3>
                            </div>
                        </div>
                    </div>
                    <!-- /Page Header -->
                    <div class="row mb-2">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label for="FirstName">First Name <span class="text-danger">*</span></label>
                                <input class="form-control" id="FirstName" name="FirstName" type="text" value="" required>
                            </div>
                            <p class="text-danger" id="fNameVDT" style="display: none;"><b>Enter first name</b></p>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label for="LastName">Last Name <span class="text-danger">*</span></label>
                                <input class="form-control" id="LastName" name="LastName" type="text" required>
                            </div>
                            <p class="text-danger" id="lNameVDT" style="display: none;"><b>Enter last name</b></p>
                        </div>
                    </div>
                    <div class="row mb-2">
                        <div class="col-md-12 mb-3">
                            <div class="form-group">
                                <label for="Address">Address <span class="text-danger">Optional</span></label>
                                <input class="form-control" id="Address" name="Address" type="text">
                            </div>
                        </div>
                       
                    </div>
                    <div class="row mb-2">
                        <div class="col-md-6 mb-3">
                            <div class="form-group">
                                <label for="Password">Password <span class="text-danger">*</span></label>
                                <input class="form-control" id="Password" name="Password" type="password" required>
                            </div>
                            <p class="text-danger" id="passwrdVDT" style="display: none;"><b>Enter password</b></p>
                        </div>
                        <div class="col-md-6 mb-3">
                            <div class="form-group">
                                <label for="ConfirmPassword">Confirm Password <span class="text-danger">*</span></label>
                                <input class="form-control" id="ConfirmPassword" name="ConfirmPassword" type="password" required>
                            </div>
                            <p class="text-danger" id="cpasswrdVDT" style="display: none;"><b>Password not matched</b></p>
                        </div>
                    </div>
                    <div class="tacbox row mt-3">
                        <div class="col">
                            <input id="termsCondition" type="checkbox" required>
                            <label for="checkbox" generated="true"> I agree to these <a href="#" data-toggle="modal" data-target="#myModal">Terms and Conditions</a>.</label>
                        </div>
                        <div class="col" style="margin-left:25%;">
                            <span>Already have an account? <a asp-action="Login" asp-controller="Accounts">Login Instead</a></span>
                        </div>
                    </div>
                    <div class="submit-section mb-3" style="display: flex; justify-content: center;">
                        <button class="btn btn-primary submit-btn text-center" id="submit" onclick="RegisterAdmin()">SaveData</button>
                    </div>

                </div>
            </div>
        </div>
    </div>
    <!-- /Page Content -->
</div>
<!-- /Page Wrapper -->
