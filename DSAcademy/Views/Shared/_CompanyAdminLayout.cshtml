				title: "Success",
				text: message,
				icon: "success",
				timer: 30000,
				confirmButtonColor: "#0253cc",
				overlay: "background - color: rgba(43, 165, 137, 0.45)",
			}).then(function () {

				location.href = url;
			})
		}

		function errorAlertwithTwoButtons(yesUrl, noUrl, newUrl, errorTitle) {
			Swal.fire({
				title: errorTitle,
				text: "",
				icon: "error",
				buttons: {
					cancle: "No",
					confirmButtonColor: "#0253cc",
					change: "Yes",
					new: "Create Pin",
				},
			})
				.then((status) => {
					debugger;
					switch (status) {
						case "change":
							location.href = yesUrl;
							break;
						case "new":
							location.href = newUrl;
							break;
						default:
							location.href = noUrl;
					}
				});
		}

		function SweeTest(yesUrl, noUrl) {
			Swal.fire({
				title: "Unverified E-mail Address",
				text: "Check your inbox Or Change email",
				type: "warning",
				showCancelButton: true,
				confirmButtonColor: "#0253cc",
				confirmButtonText: "Resend Email",
				cancelButtonText: "Change Email",
				cancelButtonColor: "#D3AF71",
				closeOnConfirm: false,
				closeOnCancel: false
			})
				.then((result) => {
					debugger
					if (result.isConfirmed) {
						location.href = yesUrl
					}
					else {
						location.href = noUrl
					}

				});
		}
	</script>
