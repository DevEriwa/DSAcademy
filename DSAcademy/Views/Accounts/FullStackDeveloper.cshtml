@using Core.Enum
@model IEnumerable<Core.Models.TrainingCourse>
@{
	var logger = Session.GetCurrentUser();
	ViewData["Title"] = "Full-Stack Developer";
	Layout = "~/Views/Shared/_ProgramLayout.cshtml";
}

<!--Main container start -->
<main class="">
	<div class="container-fluid">
		<div class="db-breadcrumb">
			<h4 class="breadcrumb-title"><a asp-action="Program" asp-controller="Accounts">Frontend Developer</a></h4>
			<ul class="db-breadcrumb-list">
				<li><a asp-action="BackendDeveloper" asp-controller="Accounts">Backend Developer</a></li>
				<li><a asp-action="FullStackDeveloper" asp-controller="Accounts">Full-Stack Developer</a></li>
			</ul>
		</div>
		<div class="row">
			@if (Model != null || Model.Count() > 0)
			{
				foreach (var item in Model)
				{
					<!-- Your Profile Views Chart -->
					<div class="col-lg-12 m-b30">
						<div class="widget-box">
							<div class="wc-title">
								<h4>Your Full-Stack Course</h4>
							</div>
							<div class="widget-inner">
								<div class="card-courses-list admin-courses">
									<div class="card-courses-media">
										<img src="@item.Logo" alt="" />
									</div>
									<div class="card-courses-full-dec">
										<div class="card-courses-title">
											<h4>@item.Title</h4>
										</div>
										<div class="card-courses-list-bx">
											<ul class="card-courses-view">
												<li class="card-courses-user">
													<div class="card-courses-user-pic">
														<img src="~/edu/admin/assets/images/testimonials/pic3.jpg" alt="" />
													</div>
													<div class="card-courses-user-info">
														<h5>Teacher</h5>
														<h4>Keny White</h4>
													</div>
												</li>
												<li class="card-courses-categories">
													<h5>3 Categories</h5>
													<h4>Backend</h4>
												</li>
												<li class="card-courses-review">
													<h5>3 Review</h5>
													<ul class="cours-star">
														<li class="active"><i class="fa fa-star"></i></li>
														<li class="active"><i class="fa fa-star"></i></li>
														<li class="active"><i class="fa fa-star"></i></li>
														<li><i class="fa fa-star"></i></li>
														<li><i class="fa fa-star"></i></li>
													</ul>
												</li>
												<li class="card-courses-stats">
													<a href="#" class="btn button-sm green radius-xl">Pending</a>
												</li>
												<li class="card-courses-price">
													<h5 class="text-primary">$@item.Amount</h5>
												</li>
											</ul>
										</div>
										<div class="row card-courses-dec">
											<div class="col-md-12">
												<h6 class="m-b10">Course Description</h6>
												<p>@item.Description. </p>
											</div>
											<div class="col-md-12">
												<a asp-action="PaymentMethod" asp-controller="Accounts" class="btn green radius-xl outline">Get Started</a>
												<a href="#" class="btn red outline radius-xl ">Cancel</a>
											</div>
										</div>

									</div>
								</div>
							</div>
						</div>
					</div>
					<!-- Your Profile Views Chart END-->
				}
			}
		</div>
	</div>
</main>
<div class="ttr-overlay"></div>